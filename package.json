{
  "private": true,
  "name": "lys",
  "version": "0.0.0",
  "main": "index.js",
  "repository": "git@github.com:fleur-js/lys.git",
  "author": "Hanakla <hanakla.dev@gmail.com>",
  "license": "MIT",
  "workspaces": [
    "pkgs/*"
  ],
  "scripts": {
    "sync:readme": "cp ./README.md ./pkgs/lys/ && :"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "README.md": [
      "yarn sync:readme",
      "git add ./pkgs/lys/README.md"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.1",
    "prettier": "^3.1.1"
  },
  "packageManager": "yarn@3.3.0"
}
